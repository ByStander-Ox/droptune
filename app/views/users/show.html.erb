<% title @user.screename %>
<div class="row">
  <div class="col">
    <img src="<%= @user.avatar_image %>" class="rounded-circle float-left mr-3" style="max-width:65px">

    <h1 class="display-4"><%= @user.screename %></h1>
  </div>
</div>
<hr>
<div class="row">
  <div class="col">
    <h2>New music from artists they follow...</h2>
    <div class="row">
      <% @new_albums.each do |a| %>
      <% cache a do %>
      <div class="col-sm-2 pb-4">
        <div class="card album">
          <a href="<%= album_path(a) %>"><img class="card-img-top img-fluid rounded" src="<%= album_image(a) %>" alt="Card image cap"></a>
          <div class="card-block">
            <h4 class="card-title"><%= link_to a.name, album_path(a) %></h4>
            <h6><%= link_to a.artist.name, artist_path(a.artist) %></h6>
            <% if a.release_date %>
            <p class="release-date"><small><%= a.release_date.strftime("%B %-e, %Y") %></small></p>
            <% end %>
          </div>
        </div>
      </div>  
      <% end %>
      <% end %>
    </div>
  </div>
</div>